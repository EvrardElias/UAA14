<Window x:Class="CE_UAA14WPF24_Evrard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CE_UAA14WPF24_Evrard"
        mc:Ignorable="d"
        FontSize="22"
        FontWeight="Bold"
        Background="#EBD9B4"
        Title="MainWindow" Height="1000" Width="1200">
    <Grid x:Name="intero">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0,0" TextWrapping="Wrap" Text="VERIFIONS VOS CONNAISSANCES EN WPF !" VerticalAlignment="Center" FontSize="34" Background="#EBD9B4" Foreground="#638889"/>
        <TextBox Grid.ColumnSpan="2" Grid.Row="3" HorizontalAlignment="Center" Margin="0,0" TextWrapping="Wrap" Text="Test WPF 6T 2024" VerticalAlignment="Center" FontSize="30" Background="#EBD9B4" Foreground="Red"/>
    </Grid>
</Window>
